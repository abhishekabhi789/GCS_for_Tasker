<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/valueFilterTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:text="@string/value_filter_helper_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/regexSwitchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/switch_text_off"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/valueFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="@string/value_filter_hint"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingVertical="8dp" />

        <Switch
            android:id="@+id/useRegexSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingVertical="8dp"
            android:trackTint="#FFD740"
            android:thumbTint="#ffb609"
            tools:checked="false"
            tools:targetApi="m" />
    </LinearLayout>

    <TextView
        android:id="@+id/typeFilterTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingVertical="8dp"
        android:text="@string/type_filter_helper_text"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/typeFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="@string/type_filter_hint"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:paddingVertical="8dp" />

        <ImageButton
            android:id="@+id/chooseTypesImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffb609"
            android:contentDescription="@string/choose_type_button_description"
            android:src="@drawable/ic_select"
            android:tint="#FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/saveConfigButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="32dp"
        android:backgroundTint="#ffb609"
        android:text="@string/save_config_button_text"
        android:textColor="#FFFFFF" />

</LinearLayout>