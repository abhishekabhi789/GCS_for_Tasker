<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_config_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/valueFilterTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:text="@string/value_filter_helper_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/regexSwitchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/switch_text_off"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/valueFilter"
            style="@style/textInputStyle"
            android:hint="@string/value_filter_hint" />

        <Switch
            android:id="@+id/useRegexSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingVertical="8dp"
            android:thumbTint="@color/yellow"
            android:trackTint="@color/yellow_light"
            tools:checked="false"
            tools:targetApi="m" />
    </LinearLayout>

    <TextView
        android:id="@+id/typeFilterTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:paddingVertical="8dp"
        android:text="@string/type_filter_helper_text"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/typeFilter"
            style="@style/textInputStyle"
            android:hint="@string/type_filter_hint" />

        <ImageButton
            android:id="@+id/chooseTypesImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffb609"
            android:contentDescription="@string/choose_type_button_description"
            android:src="@drawable/ic_select"
            android:tint="?android:textColorPrimaryInverse" />
    </LinearLayout>

    <Button
        android:id="@+id/saveConfigButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="32dp"
        android:backgroundTint="#ffb609"
        android:text="@string/save_config_button_text"
        android:textColor="?android:textColorPrimaryInverse"  />

    <TextView
        android:id="@+id/code_types_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/code_types_list_title"
        android:textColor="?android:textColorSecondary" />

    <TextView
        android:id="@+id/code_types_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="3"
        android:textIsSelectable="true" />

</LinearLayout>